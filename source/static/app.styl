@keyframes float
  0%, 100%
    transform translateY(-0.1rem)

  50%
    transform translateY(0.1rem)

body
  width 100vw
  height 100vh
  margin 0
  padding 0
  background-image linear-gradient(#AED6F1, #85C1E9)
  user-select none

.btn
  position absolute
  width 6.4rem
  height 1.6rem
  left calc((100vw - 6.4rem) * 0.5)
  top calc((100vh - 1.6rem) * 0.5)
  text-align center
  line-height @height
  background-color #F7DC6F
  color #333
  font-size @height * 0.5
  font-weight bold
  box-shadow 0 0.1rem 0.2rem rgba(#000, 0.2)
  border-radius @height * 0.5
  cursor pointer
  animation float 60s ease-in-out infinite

.file
  opacity 0
  pointer-events none

.footer
  position absolute
  width 5rem
  height 0.5rem
  left 0
  bottom 0.2rem
  margin 0
  padding 0 2vw
  box-sizing border-box
  // background-color rgba(#000, 0.5)
  overflow hidden

  a, p
    display block
    width 100%
    height @height * 0.5
    margin 0
    padding 0
    line-height @height
    color rgba(#fff, 0.5)
    font-size 0.2rem